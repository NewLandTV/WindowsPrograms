<Window x:Class="NewLandAccountManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewLandAccountManagement"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="NewLand Account Management" Width="800" Height="450">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Width="360" Height="20" Margin="0, 0, 0, 40">이름과 아이디와 비밀번호를 입력하세요. (이름, 아이디, 비밀번호)</TextBlock>
            <TextBox Name="nameTextBox" Width="300" Height="30" Margin="0, 5, 0, 5" KeyDown="OnKeyDownHandler" FontSize="16"/>
            <TextBox Name="idTextBox" Width="300" Height="30" Margin="0, 5, 0, 5" KeyDown="OnKeyDownHandler" FontSize="16">@nacc.com</TextBox>
            <TextBox Name="passwordTextBox" Width="300" Height="30" Margin="0, 5, 0, 5" KeyDown="OnKeyDownHandler" FontSize="16"/>
            <Button Name="createButton" Content="계정 만들기" Click="CreateButton_Click" Height="60" FontSize="26" FontWeight="Bold" Margin="0, 40, 0, 0" Foreground="#DD000000" VerticalAlignment="Center" HorizontalAlignment="Center" MinWidth="170" Background="#FF7DC75B" BorderBrush="#FFFFEE83"/>
        </StackPanel>
    </Grid>
</Window>
